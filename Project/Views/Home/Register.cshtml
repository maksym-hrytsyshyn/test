@model Project.Models.MedicalRecord

@{
ViewData["Title"] = "Register";
}

<h2>Register a New Medical Record</h2>

<form id="registerForm" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth.Day"></label>
        <input asp-for="DateOfBirth.Day" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth.Month"></label>
        <input asp-for="DateOfBirth.Month" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth.Year"></label>
        <input asp-for="DateOfBirth.Year" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
<script>
    $(document).ready(function () {
        $('#registerForm').submit(function (event) {
            event.preventDefault();

            var formData = {
                FullName: $('input[name="FullName"]').val(),
                DateOfBirth: {
                    Day: parseInt($('input[name="DateOfBirth.Day"]').val()),
                    Month: parseInt($('input[name="DateOfBirth.Month"]').val()),
                    Year: parseInt($('input[name="DateOfBirth.Year"]').val())
                }
            };

            $.ajax({
                url: '/api/medicalrecords/create',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (data) {
                    window.location.href = '/Home/RegistrationSuccess?patientId=' + data;
                },
                error: function (xhr) {
                    var errorMessage = 'An error occurred while creating the medical card.';
                    if (xhr.responseText) {
                        errorMessage += '\n' + xhr.responseText;
                    }
                    alert(errorMessage);
                }
            });
        });
    });
</script>
}
