@model Project.Models.MedicalRecord

@{
    ViewData["Title"] = "Register";
}

<h2>Register a New Medical Record</h2>

<form asp-action="CreateMedicalCard" asp-controller="MedicalRecords" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth.Day"></label>
        <input asp-for="DateOfBirth.Day" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth.Month"></label>
        <input asp-for="DateOfBirth.Month" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth.Year"></label>
        <input asp-for="DateOfBirth.Year" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            @if(ViewBag.PatientId != null)
            {
                <text>
                window.location.href = '/Home/RegistrationSuccess?patientId=@ViewBag.PatientId';
                </text>
            }
        });
    </script>
}